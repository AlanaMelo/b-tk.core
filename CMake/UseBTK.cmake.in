#
# This file sets up include directories, link directories, and
# compiler settings for a project to use BTK.  It should not be
# included directly, but rather through the BTK_USE_FILE setting
# obtained from BTKConfig.cmake.
#

IF(BTK_BUILD_SETTINGS_FILE AND NOT SKIP_BTK_BUILD_SETTINGS_FILE)
  INCLUDE(${CMAKE_ROOT}/Modules/CMakeImportBuildSettings.cmake)
  CMAKE_IMPORT_BUILD_SETTINGS(${BTK_BUILD_SETTINGS_FILE})
ENDIF(BTK_BUILD_SETTINGS_FILE AND NOT SKIP_BTK_BUILD_SETTINGS_FILE)

# Add compiler flags needed to use BTK.
SET(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} ${BTK_REQUIRED_C_FLAGS}")
SET(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${BTK_REQUIRED_CXX_FLAGS}")
SET(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} ${BTK_REQUIRED_LINK_FLAGS}")
SET(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS} ${BTK_REQUIRED_LINK_FLAGS}")
SET(CMAKE_MODULE_LINKER_FLAGS "${CMAKE_MODULE_LINKER_FLAGS} ${BTK_REQUIRED_LINK_FLAGS}")

# Add include directories needed to use BTK.
INCLUDE_DIRECTORIES(BEFORE ${BTK_INCLUDE_DIRS})

# Add link directories needed to use BTK.
LINK_DIRECTORIES(${BTK_LIBRARY_DIRS})

# Load settings from the system eigen3 with which BTK was built, if any.
IF(BTK_USE_SYSTEM_EIGEN3)
  # If eigen3 has already been found, make sure it is the one used to
  # build BTK.
  IF(WIN32 OR APPLE)
    STRING(TOLOWER "${EIGEN3_INCLUDE_DIR}" BTK_CHECK_EIGEN3_INCLUDE_DIR)
    STRING(TOLOWER "${BTK_EIGEN3_INCLUDE_DIR}" BTK_CHECK_BTK_EIGEN3_INCLUDE_DIR)
  ELSE(WIN32 OR APPLE)
    SET(BTK_CHECK_EIGEN3_INCLUDE_DIR "${EIGEN3_INCLUDE_DIR}")
    SET(BTK_CHECK_BTK_EIGEN3_INCLUDE_DIR "${BTK_EIGEN3_INCLUDE_DIR}")
  ENDIF(WIN32 OR APPLE)
  STRING(COMPARE EQUAL "${BTK_CHECK_EIGEN3_INCLUDE_DIR}" "${BTK_CHECK_BTK_EIGEN3_INCLUDE_DIR}"
         BTK_EIGEN3_INCLUDE_DIR_MATCH)
  IF(EIGEN3_FOUND)
    IF(NOT BTK_EIGEN3_INCLUDE_DIR_MATCH)
      MESSAGE(FATAL_ERROR
        "BTK was built with EIGEN3 from \"${BTK_EIGEN3_INCLUDE_DIR}\", "
        "but this project is using EIGEN3 from \"${EIGEN3_INCLUDE_DIR}\".  "
        "Please set EIGEN3_INCLUDE_DIR to match the one used to build BTK."
        )
    ENDIF(NOT BTK_EIGEN3_INCLUDE_DIR_MATCH)
  ELSE(EIGEN3_FOUND)
    IF(EIGEN3_INCLUDE_DIR)
      IF(NOT BTK_EIGEN3_INCLUDE_DIR_MATCH)
        MESSAGE(
          "Warning: BTK was built with EIGEN3 from \"${BTK_EIGEN3_INCLUDE_DIR}\", "
          "but this project has set EIGEN3_INCLUDE_DIR to \"${EIGEN3_INCLUDE_DIR}\".  "
          "BTK is changing EIGEN3_INCLUDE_DIR to match the EIGEN3 with which it was built."
          )
      ENDIF(NOT BTK_EIGEN3_INCLUDE_DIR_MATCH)
    ENDIF(EIGEN3_INCLUDE_DIR)
    SET(EIGEN3_INCLUDE_DIR ${BTK_EIGEN3_INCLUDE_DIR})
    FIND_PACKAGE(Eigen3)
    IF(NOT EIGEN3_FOUND)
      MESSAGE(FATAL_ERROR
        "UseBTK could not load EIGEN3 settings from \"${EIGEN3_INCLUDE_DIR}\" even through "
        "BTK was built using EIGEN3 from this location."
        )
    ENDIF(NOT EIGEN3_FOUND)
  ENDIF(EIGEN3_FOUND)
ENDIF(BTK_USE_SYSTEM_EIGEN3)
